<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
    <link rel="icon" href="/favicon.png" type="image/png">
</head>

<body class="<%= theme %>-theme-body">

    <div class="container <%= theme %>-theme-container">

        <h1 class="mt-4">
            <%= title %>
        </h1>

        <div>
            <a class="btn btn-outline-primary btn-sm theme-btn" href="/">To Main Page</a>
            <a class="btn btn-outline-primary btn-sm theme-btn" href="/articles/stats/view">Article Stats</a>
            <a class="btn btn-outline-primary btn-sm theme-btn" href="/articles/new">New Article</a>
        </div>

        <% if (articles.length===0) { %>
            <div>
                No articles yet.
            </div>
            <% } else { %>
                <ul class="flex-column p-0 type-none">
                    <% articles.forEach(function(article) { %>
                        <li class="card mt-2 theme-card">
                            <div class="card-body">
                                <h2>
                                    <%= article.title %>
                                </h2>
                                <div>
                                    <%= article.text %>
                                </div>
                                <div>
                                    <a class="btn btn-primary ml-1 mt-3 theme-btn"
                                        href="/articles/<%= article._id %>">read</a>
                                </div>
                            </div>
                        </li>
                        <% }); %>
                </ul>
                <% } %>
                    <% if (user) { %>
                        <div class="mr-3 mt-4">
                            Current user: <strong>
                                <%= user.email %>
                            </strong>
                        </div>
                        <div class="mb-4">
                            <form action="/auth/logout" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-primary btn-sm mt-2 theme-btn">Logout</button>
                            </form>
                        </div>
                        <% } %>

    </div>

</body>

</html>